@model IEnumerable<OnLib.Models.Titel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Autor
            @*@Html.DisplayNameFor(model => model.Autor.Nachname)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Beschreibung)
        </th>*@
        <th>
            Genre
            @*@Html.DisplayNameFor(model => model.Genre.Name)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Erscheinung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Autor.Nachname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Typ)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Beschreibung)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @{
                int jahr = @item.Erscheinung.Year;
                string erscheinung = jahr.ToString();
            }
            @erscheinung
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TitelId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TitelId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TitelId })
        </td>
    </tr>
}

</table>
