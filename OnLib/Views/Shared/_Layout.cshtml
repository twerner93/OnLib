<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OnLib</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">

        <div class="row" style="margin-top:10px;">
            <div class="col-md-6">
                <p><img style="max-width: 100px; margin-top: -50px; margin-bottom: 5px;"
                    src="./Logo/LogoKlein.jpg"></p>
            </div>
            <div class="col-md-6">
                @*<form class="navbar-form navbar-right" role="search">*@
                @using (Html.BeginForm("Search", "Titel", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                {
                
                 <div class="input-group">
                     <input class="form-control" placeholder="Suche..." name="searchString" id="searchString" type="text">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                 </div>
                                        
                    @*<button type="submit" class="btn inverse">Suchen</button>*@
                }
                   @* <div class="form-group">
            <input type="text" class="form-control" placeholder="Suche">
        </div>
        <button type="submit" class="btn btn-info">Suchen</button>
    </form>*@
            </div>
        </div>

        <div class="row">
            <nav class="navbar navbar-default" role="navigation">
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("OnLib", "Index", "Home", null, new { @class = "navbar-brand" })
                        </li>
                        <li>
                            @Html.ActionLink("Startseite", "Index", "Home")
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Alle Medien <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Alle", "All", "Titel")</li>
                                <li>@Html.ActionLink("Alben", "All/Album", "Titel")</li>
                                <li>@Html.ActionLink("Bücher", "All/Buch", "Titel")</li>
                                <li>@Html.ActionLink("Filme", "All/Film", "Titel")</li>
                                <li>@Html.ActionLink("Serien", "All/Serie", "Titel")</li>
                            </ul>
                        </li>
                        <li>
                            @Html.ActionLink("Kontakt", "Contact", "Home")
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </div>
    </div>
    <div class="container body-content">
        <div class="box">
            @RenderBody()
            <hr />
        </div>
            <footer>
                <p>&copy; @DateTime.Now.Year - OnLib, Wanping Qu & Torsten Werner</p>
            </footer>
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
