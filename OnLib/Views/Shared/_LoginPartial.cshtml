@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hallo @User.Identity.GetUserName()!<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Meine Medien", "MyMedia", "Titel")</li>
                <li>@Html.ActionLink("Daten bearbeiten", "ManageAccountData", "Account")</li>
                <li>@Html.ActionLink("Passwort ändern", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Verwalten" })</li>
            </ul>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Abmelden</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrieren", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Anmelden", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
