@model OnLib.Models.Leihe

@{
    ViewBag.Title = "Leihen";
}

<h2>Leihen</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.KopieId, "KopieId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("KopieId", String.Empty)
                @Html.ValidationMessageFor(model => model.KopieId)*@
                @*@Html.EditorFor(model => model.KopieId, Model.KopieId)*@
                @{if (ViewBag.forKopie == false)
                  {
                    @Html.DropDownList("KopieId", String.Empty)
                    @Html.ValidationMessageFor(model => model.KopieId)
                  }
                  else
                  {
                    @Html.DisplayFor(model => model.Kopie.UserProfile.UserName)
                    @Html.HiddenFor(model => model.KopieId, Model.Kopie)
                  }
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ausgeliehen, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{DateTime ausgeliehen = ViewBag.Ausgeliehen;}
                @{Model.Ausgeliehen = ausgeliehen;}
                @Html.HiddenFor(model => model.Ausgeliehen, ausgeliehen)
                @Model.Ausgeliehen.ToShortDateString()
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rueckgabe, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Rueckgabe")
                @Html.ValidationMessageFor(model => model.Rueckgabe)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Zurueck, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Zurueck)
                @Html.ValidationMessageFor(model => model.Zurueck)
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
