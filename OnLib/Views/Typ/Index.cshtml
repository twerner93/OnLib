@model IEnumerable<OnLib.Models.Typ>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Titel hinzufügen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschreibung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschreibung)
        </td>
        <td>
            @Html.ActionLink("Bearbeiten", "Edit", new { id=item.TypId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TypId }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.TypId })
        </td>
    </tr>
}

</table>
